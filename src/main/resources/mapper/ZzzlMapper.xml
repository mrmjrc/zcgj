<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="cn.mrmj.zcgj.mapper.ZzzlMapper">
    <sql id="Base_Column_List" >
             id, ear_number,gender,state,is_present,age,varieties,house_number,approach_time,approach_type,departure_type
    </sql>

    <select id="query" resultType="ZzzlPo">
        select
         <include refid="Base_Column_List" />
         from zzzl
    </select>

    <insert id="insert" parameterType="ZzzlPo" >
        INSERT INTO zzzl(ear_number,gender,state,is_present,age,varieties,house_number,approach_time,approach_type,departure_type)
        VALUES(#{earNumber},#{gender},#{state},#{isPresent},#{age},
        #{varieties},#{houseNumber},
        #{approachTime},#{approachType},#{departureType})
    </insert>

    <update id="update" parameterType="ZzzlPo">
        UPDATE zzzl SET
        ear_number=#{earNumber},gender=#{gender},state=#{state},is_present=#{isPresent},
        age=#{age},varieties=#{varieties},house_number=#{houseNumber},approach_time=#{approachTime},
        approach_type=#{approachType},departure_type=#{departureType} WHERE id=#{id}
    </update>

    <select id="selectByPrimaryKey" resultType="ZzzlPo" >
        select
        <include refid="Base_Column_List" />
        from zzzl
        <if test="id!=null">
            where id=#{id}
        </if>
    </select>
    <select id="selectByEarNum" resultType="ZzzlPo" >
        select
        <include refid="Base_Column_List" />
        from zzzl
        <if test="earNumber!=null">
            where ear_number=#{earNumber}
        </if>
    </select>
    <delete id="deleteById">
        DELETE FROM zzzl WHERE id=#{id}
    </delete>

    <delete id="deleteByIds">
        DELETE FROM zzzl WHERE id=#{id}
    </delete>

    <select id="selectByExample" resultType="ZzzlPo">
        select
        <include refid="Base_Column_List" />
        from zzzl
        <where>
            <if test="earNumber!=null and earNumber!=''">
                and ear_number=#{earNumber}
            </if>
            <if test="gender!=null and gender!=''">
                and gender=#{gender}
            </if>
            <if test="age!=null and age!=''">
                and age=#{age}
            </if>
            <if test="houseNumber !=null and houseNumber !=''">
                and house_number=#{houseNumber}
            </if>
        </where>
    </select>


</mapper>